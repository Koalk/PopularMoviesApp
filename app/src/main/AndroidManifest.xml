<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.popularmovies.ourhome.com.popularmoviesapp" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            android:launchMode="singleTop"
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DetailActivity"
            android:label="@string/title_activity_detail"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="app.popularmovies.ourhome.com.popularmoviesapp.MainActivity" />
        </activity>
        <activity
            android:name=".FullScreenImageActivity"
            android:label="@string/title_activity_full_screen_image"
            android:parentActivityName=".DetailActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="app.popularmovies.ourhome.com.popularmoviesapp.DetailActivity" />
        </activity>
    </application>

</manifest>
